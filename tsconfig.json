{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["ESNext", "DOM"],
    "strict": true,                 
    "noImplicitAny": true,          
    "strictNullChecks": true,       
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@pages/*": ["src/pages/*"],
      "@support/*": ["src/support/*"]
    },
    "outDir": "dist",
    "sourceMap": true
  },
  "include": ["src/**/*.ts", "features/**/*.ts"],
  "exclude": ["node_modules"]
}